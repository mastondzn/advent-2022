{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,

        /* If NOT transpiling with TypeScript: */
        "moduleResolution": "Node",
        "module": "CommonJS",
        "noEmit": true,

        "lib": ["es2022"]
    }
}
